.container {
  width: 100%;
}

.change {
  background: rgb(230, 230, 230);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 64rpx 0 64rpx;
}

.header .now {
  font-size: 48rpx;
  font-weight: bold;
  color: rgb(51, 51, 51);
}

.now .decoration {
  display: flex;
  margin-top: 14rpx;
}

.decoration view:first-child {
  width: 30rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: rgb(0, 179, 119);
}

.decoration view:last-child {
  width: 20rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: rgb(217, 217, 217);
  margin-left: 8rpx;
}

.header image {
  width: 56rpx;
  height: 56rpx;
}

.content {
  padding: 32rpx;
}

.content .weeks, .content .days {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weeks view, .days view {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgb(102, 102, 102);
}

.before {
  color: rgb(153, 153, 153) !important;
}

.today {
  border-radius: 30rpx;
  background: rgb(0, 179, 119);
  color: white !important; 
}

.close {
  height: 8rpx;
}

.change .close {
  width: 100%;
  padding: 16rpx 0;
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  background: rgb(255, 255, 255);
}

.close view {
  width: 56rpx;
  height: 8rpx;
  margin: 0 auto;
  border-radius: 6rpx;
  background: rgb(230, 230, 230);
}

.swiper {
  height: auto !important;
}

.bgGroup {
  width: 100%;
  height: 80rpx;
}

.bgGroup view {
  height: 40rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin: 0 auto;
  background: rgb(255, 255, 255);
}

.bgGroup view:first-child {
  width: 590rpx;
  opacity: 0.3;
}

.bgGroup view:last-child {
  width: 670rpx;
  opacity: 0.6427;
}